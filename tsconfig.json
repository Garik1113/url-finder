{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",       
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,              
    "alwaysStrict": true,                 
    "allowSyntheticDefaultImports": true,   
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true  
  }
}
